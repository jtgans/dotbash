@PROJECT@-project-pre-hook()
{
    pushd ~/Projects/@PROJECT@ >/dev/null
}

@PROJECT@-project-post-hook()
{
    while expr $(dirs -v |wc -l) - 1 > /dev/null; do
        popd >/dev/null
    done
}

@PROJECT@-project-init-hook()
{
    export EDITOR="vim"
    export LESS="-MR"

    project-set-prompt '@PROJECT@'
}

add-hook _PROJECT_PRE_HOOKS @PROJECT@-project-pre-hook
add-hook _PROJECT_POST_HOOKS @PROJECT@-project-post-hook
add-hook _INIT_POST_HOOKS @PROJECT@-project-init-hook
